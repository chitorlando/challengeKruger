generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  usuario    String   @db.VarChar(50)
  password  String   @db.VarChar(255) // Encriptado
  nombre    String   @db.VarChar(50)
  apellido  String   @db.VarChar(50)
  rol       String    @default("CLIENTE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Cliente   Cliente?
}

model Cliente {
  id          Int       @id @default(autoincrement())
  cedula      String    @unique @db.VarChar(10)
  coordenadas String    @db.VarChar(50)
  usuarioId   Int       @unique
  usuario     Usuario   @relation(fields: [usuarioId], references: [id])
  horarios    Horario[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Horario {
  id           Int      @id @default(autoincrement())
  nombreSector String   @db.VarChar(100)
  horaInicio   String   @db.VarChar(5)
  horaFin      String   @db.VarChar(5)
  poligono     String
  clienteId    Int
  cliente      Cliente  @relation(fields: [clienteId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
